<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grassroots TM - Find Local Football Clubs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
        }
        header {
            background-color: #2c3e50;
            color: white;
            padding: 15px;
            font-size: 24px;
        }
        #map {
            width: 100%;
            height: 400px;
        }
        .club-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }
        .club-card {
            width: 250px;
            margin: 15px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 10px;
            text-align: center;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }
        .club-card img {
            width: 100px;
            height: 100px;
        }
    </style>
</head>
<body>
    <header>Grassroots TM - Find Local Football Clubs</header>
    <p>Enable location to find clubs near you</p>
    <button onclick="getLocation()">Find Clubs Near Me</button>
    <div id="map"></div>
    <div class="club-container" id="clubList"></div>

    <script>
        if (!window.googleMapsLoaded) {
            window.googleMapsLoaded = true;
            let script = document.createElement('script');
            script.src = "https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places";
            script.async = true;
            script.defer = true;
            document.head.appendChild(script);
        }

        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            let lat = position.coords.latitude;
            let lng = position.coords.longitude;
            
            let map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: lat, lng: lng },
                zoom: 10
            });

            let clubs = [
                { name: "Local FC", league: "National League", lat: lat + 0.01, lng: lng + 0.01, logo: "https://via.placeholder.com/100" },
                { name: "City United", league: "League Two", lat: lat - 0.02, lng: lng - 0.02, logo: "https://via.placeholder.com/100" }
            ];

            let clubList = document.getElementById('clubList');
            clubList.innerHTML = "";

            clubs.forEach(club => {
                let marker = new google.maps.Marker({
                    position: { lat: club.lat, lng: club.lng },
                    map: map,
                    title: club.name
                });

                let clubCard = document.createElement("div");
                clubCard.classList.add("club-card");
                clubCard.innerHTML = `
                    <img src="${club.logo}" alt="${club.name} Logo">
                    <h3>${club.name}</h3>
                    <p>League: ${club.league}</p>
                `;
                clubList.appendChild(clubCard);
            });
        }
    </script>
</body>
</html>
