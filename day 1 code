<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grassroots TM - Find Local Football Clubs</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        body { font-family: Arial, sans-serif; text-align: center; }
        #map { height: 400px; width: 100%; }
        .club-container { padding: 20px; }
    </style>
</head>
<body>
    <h2>Grassroots TM - Find Local Football Clubs</h2>
    <button onclick="getLocation()">Find Clubs Near Me</button>
    <div id="map"></div>
    <div class="club-container" id="clubList"></div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        let map = L.map('map').setView([51.505, -0.09], 10); // Default location (London)

        // Add OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            let lat = position.coords.latitude;
            let lng = position.coords.longitude;
            map.setView([lat, lng], 12);
            
            L.marker([lat, lng]).addTo(map)
                .bindPopup("You are here").openPopup();

            let clubs = [
                { name: "Local FC", league: "National League", lat: lat + 0.01, lng: lng + 0.01 },
                { name: "City United", league: "League Two", lat: lat - 0.02, lng: lng - 0.02 }
            ];

            let clubList = document.getElementById('clubList');
            clubList.innerHTML = "";

            clubs.forEach(club => {
                L.marker([club.lat, club.lng]).addTo(map)
                    .bindPopup(`<b>${club.name}</b><br>League: ${club.league}`).openPopup();

                let clubCard = document.createElement("div");
                clubCard.innerHTML = `<h3>${club.name}</h3><p>League: ${club.league}</p>`;
                clubList.appendChild(clubCard);
            });
        }
    </script>
</body>
</html>
